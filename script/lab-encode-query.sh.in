ENCODER=@QRENCODE@;

if [ "$#" -ne 3 ]; then
    echo -e "Error: missing parameter.\n\n";
    echo -e "Usage $0 fqdn building-name storage-name.\nExample:\n$0 www.foo.io warehouse11 s1";
else

    FQDN=$1;

    BUILDING=$2;

    STORAGE=$3;

    FQDN_PROTOCOL="https://$FQDN/search-chem-prod/?";

    PATHS="s-id=&s-owner=&s-name=&s-building=$BUILDING&s-floor=&s-storage=$STORAGE&s-shelf=";

    URL=$FQDN_PROTOCOL$PATHS

#    echo $URL;

    $ENCODER -t EPS $URL;
fi
